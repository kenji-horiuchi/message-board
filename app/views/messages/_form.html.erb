<%= form_for(@message) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>

  名前:
  <%= f.text_field :name, :placeholder  => "Jon Bon Jovi" %>

  内容:
  <%= f.text_area :body, :rows  => "1", :placeholder  => "Cause it doesn't make a difference if we make it or not" %>
  <%= f.submit class: "btn btn-sm btn-primary active" %>
                         <!-- サイズ    カラ       ー-->                    
<% end %>